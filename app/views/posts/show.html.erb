<div class="row">
	
	<div class="offset-by-two eight columns show">
		<div class="post-user">
			<%= @post.user.user_name %>
		</div>
		<%= link_to (image_tag @post.image.url(:medium)), post_path %>
		
		<div class="post-caption">
			<%= @post.caption %>
		</div>
		<% if @post.user.id == current_user.id %>

		<%= link_to "Edit Post", edit_post_path(@post) %>
		<% else %>
		<%= link_to "Cancel", posts_path %>
		<% end %>
	</div>
</div>
